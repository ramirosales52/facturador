# ====================================
# CONFIGURACIÓN AFIP/ARCA - USUARIO
# ====================================
# Solo necesitas configurar estas variables para usar la aplicación

# CUIT de tu empresa
AFIP_CUIT=20409378472

# Ambiente: false = homologación/testing, true = producción
AFIP_PRODUCTION=false

# Rutas a los certificados AFIP (rutas absolutas en producción)
# Windows: C:\ruta\completa\al\certificate.crt
# Linux/Mac: /ruta/completa/al/certificate.crt
AFIP_CERT_PATH=../certificates/certificate.crt
AFIP_KEY_PATH=../certificates/private_key.key

# ====================================
# CONFIGURACIÓN INTERNA (NO MODIFICAR)
# ====================================
# Estas variables son para uso interno del desarrollador

# AFIP SDK Access Token (solo para desarrollo - generación automática de certificados)
AFIP_SDK_ACCESS_TOKEN=your_token_here

