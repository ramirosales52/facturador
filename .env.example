# CUIT de la empresa (CUIT de prueba por defecto)
AFIP_CUIT=20409378472

# Ambiente: false = homologación/testing, true = producción
AFIP_PRODUCTION=false

# Rutas a los certificados (fuera del repositorio por seguridad)
